<%- include('partials/header') %>

<div class="admin-container">
  <h2 style="display: flex; justify-content: center;">Пользователи системы</h2>

  <div class="user-controls">
    <div class="search-filter-container">
      <div class="search-box">
        <input type="text" id="user-search" placeholder="Поиск по имени или фамилии..." class="search-input">
      </div>
      
      <div class="role-filter">
        <label for="role-filter">Фильтр по роли:</label>
        <select id="role-filter" class="filter-select">
          <option value="all">Все роли</option>
          <option value="пользователь">Пользователь</option>
          <option value="сотрудник">Сотрудник</option>
          <option value="администратор">Администратор</option>
        </select>
      </div>
    </div>
  </div>
  
  <div class="users-list">
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Фамилия</th>
          <th>Имя</th>
          <th>Телефон</th>
          <th>Роль</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
            <tr data-user-id="<%= user.id %>" data-role="<%= user.role %>">
            <td><%= user.id %></td>
            <td><%= user.last_name %></td>
            <td><%= user.first_name %></td>
            <td><%= user.phone || 'Не указан' %></td>
            <td>
              <select class="role-select" data-user-id="<%= user.id %>">
                <option value="пользователь" <%= user.role === 'пользователь' ? 'selected' : '' %>>Пользователь</option>
                <option value="сотрудник" <%= user.role === 'сотрудник' ? 'selected' : '' %>>Сотрудник</option>
                <option value="администратор" <%= user.role === 'администратор' ? 'selected' : '' %>>Администратор</option>
              </select>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</div>

<%- include('partials/footer') %>